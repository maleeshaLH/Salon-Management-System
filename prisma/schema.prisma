generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    String @id
  name  String
  email String
  phone Int
}

model Employee {
  employeeId   String @id
  employeeName String
  email        String
  phone        Int
  designation  String
  salary       Int
}

model Appointment {
  appointmentId String   @id
  date          DateTime
  time          String
  serviceType   String
  customerId    String
  employeeId    String
}

model Payment {
  paymentId     String   @id
  appointmentId String
  paymentDate   DateTime
  amount        Int
}

model Service {
  serviceId String @id
  name      String
  duration  String
  price     Int
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
}

